<h1>New Article</h1>

<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<<div class="category-form-container">
  <h1>Create a New Category</h1>

  <%= render 'form', category: @category %>  <!-- Render the _form partial -->

  <%= link_to 'Back to Categories', categories_path, class: 'back-to-categories-link' %>  <!-- Link back to the categories index page -->
</div>


<% end %>

