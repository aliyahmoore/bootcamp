<h1>Edit Article</h1>

<%= render "form", article: @article %>

<h1>Edit Category</h1>

<%= form_with model: @category do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% @category.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Update Category" %>
  </div>
<% end %>

<%= link_to 'Back to Category', @category %>  <!-- Link to go back to category show page -->
