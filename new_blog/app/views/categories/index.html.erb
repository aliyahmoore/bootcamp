<h1>Categories</h1>

<%= Category.count %>

<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
  <% end %>
</ul>

<%= link_to "Create a New Category", new_category_path %>

<ul class="list-group">
    <%@categories.each do |category|%>
  <li class="list-group-item"><%=category.name%></li>
    <%end%>
</ul>